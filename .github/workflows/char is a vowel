#include <iostream>
using namespace std;


bool isVowel(char ch);

int main() {
    
    char ch;
    cout<<"Please ebter a char:";
    cin>>ch;
    if(isVowel(ch)){
        cout<<"Char is vowel";
    }
    else{
        cout<<"char is not a vowel";
    }
    
    return 0;
}

bool isVowel(char ch)
{
return (ch=='a'||ch=='e'||ch=='i'||ch=='o'||ch=='u');
}
